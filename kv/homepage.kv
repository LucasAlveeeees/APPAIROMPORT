<HomePage>:
    FloatLayout:
        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size:self.size
                    source:"icones/botao.png"

            pos_hint:{"right": 0.85, "top": 0.95}
            size_hint: 0.7, 0.2
            bold: True
            text: "codigo do cliente"
            id: total_OSS
        ScrollView:
            pos_hint: {"right":1, "top":0.75}
            size_hint:1, 0.63
            GridLayout:
                cols: 1
                id: lista_vendas
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True



        Label:
            pos_hint:{"right": 1, "top": 1}
            size_hint: 1, 0.85
            text: "Pagina Inicial"
        GridLayout:
            rows:1
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb:utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos

            ImageButton:
                source:"icones/produtos.jpg"
                on_release:app.mudar_tela("produtospage")
            ImageButton:
                source:"icones/contato.png"
                on_release: app.mudar_tela("contatopage")
            ImageButton:
                source:"icones/settings.png"
                on_release:app.mudar_tela("ajustespage")

                text: "NumeroOSS"
                id: Total_OS
                markup: True

